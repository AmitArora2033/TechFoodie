<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

  </style>


  <style name="AppTheme.Caption" parent="TextAppearance.AppCompat.Caption">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textSize">@dimen/font_xlarge</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="AppTheme.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">
    <item name="android:textColor">@color/color_grey_dark</item>
    <item name="android:textSize">@dimen/font_medium</item>
  </style>

</resources>
